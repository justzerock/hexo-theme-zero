#vcomment {  
  width: 100%
  p, pre code, .veditor, .status-bar, .vinput, .vinput::placeholder {
    color: #6D98BA
  }

  .vwrap {
    background: rgba(#FFFDFD, 0.6)
    border: none
    border-radius: 1vw
    box-shadow: 0 0 8px rgba(#000, 0.02)  
  }

  .veditor {
    border-radius: 1vw
    box-shadow: 0 0 4px rgba(#000, 0.04)
    padding: 1em
    color: #6D98BA
    background: #FFFDFD
    text-shadow: 0.1vw 0.1vw 0.3vw rgba(0,0,0,0.08)
    &::placeholder {
      color: #6D98BA
    }
  }

  .vicon {
    fill: #6D98BA
  }

  .vbtn {
    display: inline-flex
    border-radius: 1vw
    border: none
    box-shadow: 0 0 10px rgba(#000, 0.04)
    color: #6D98BA
    &:active {
    }
  }

  .vimg {
    border: none
    background: #FCFBFB
    box-shadow: 0 0 4px rgba(#000, 0.04)
  }

/*   .vpreview {
    color: #6D98BA
  } */
}