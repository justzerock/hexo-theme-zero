  .post-list {
    display: flex
    flex-direction: column
    width: calc(100% - 8vw)
    padding: 4vw
    background: $post-bg-color
    box-shadow: 0 0 10px rgba(#000, 0.08)
    border-radius: 1vw
    &__item {
      display flex
      flex-direction: row
      margin: 1vw
      position: relative
      animation: shadow .5s linear
    }
    @keyframes shadow {
      0% {
        opacity: 0.5;
        // box-shadow: 0 0 0 rgba(#000,0)
      }
      50% {
        opacity: 1;
        }
      100% {
        // box-shadow: boxShadow(0.2vw, 'light-out')
      }
    }
    &__img--link {
      display: flex
      flex: 1
      width: 16vw
      height: 12vw
      border-radius: 5px
      overflow hidden
      box-shadow: 0 5px 11px 0 rgba(#000, 0.18), 0 4px 15px 0 rgba(#000, 0.15)
      }
    &__img--img {
      width: 100%
      height: 100%
      object-fit: cover
      position relative
      transition: transform 0.5s ease-in-out
      &:hover {
        transform: scale(1.05)
        }
    }
    &__info {
      display: flex
      flex-direction: column
      flex: 2
      height: 12vw
      justify-content: space-around
      margin-left: 2vw
      border-radius: 1vw
    }
    &__title {
      font-size: 1.5vw
      margin: 0.5vw 0
      width: 36vw
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis
      &--link {
        color: $post-tt-color
        &:hover {
          color: $post-tt-color-hover
        }
      }
      &--icon {
        font-size: 1em
      }
    }
    &__excerpt {
      color: $post-tt-color
      opacity: 0.7
      line-height: 1.6
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
      p {
        margin: 0.5vw 0
      }
    }
    &__bottom {
      display: flex
      margin: 0.5vw 0
      }
    &__date {
      &--icon {
        margin-right: 0.25vw
      }
      display: flex;
    }
    &__tag, &__category {
      display: inline-flex
      margin: 0 0.2em
      color: $post-tt-color
      &:hover {
        color: $post-tt-color-hover
        }
      &--icon {
        margin: 0 0.25em 0 0.5em
      }
    }
    &__link {
      position: absolute
      right: 1vw  
      bottom: 1vw
      width: 2em
      height: 2em
      border-radius: 1em
      display: flex
      justify-content: center
      align-items: center
      //background: $btn-bg-circle
      // box-shadow: boxShadow(0.1vw, 'light-out'), 
      //  inset 0 1px 2px rgba(#fff, 0.8), 
      //  inset 0 -1px 2px rgba(#000, 0.1)
      box-sizing: border-box
      //// box-shadow: 5px 5px 22px 0 #bebebe,
      //    -5px -5px 12px 0 #ffffff
      transition: all .3s ease-in-out
      &--icon {
        color: rgba(#6D94B7, 0.6)
        //text-shadow: textShadow('light', 0.05vw, rgba(#E1EFF3, 0.8), rgba(#000, 0.8))
      }
      &:active {
        background: $bg-lg-active
        // box-shadow: boxShadow(0.2vw, 'light-out'), boxShadow(0.2vw, 'light-inset')
        //// box-shadow: 5px 5px 22px 0 #bebebe,
        //    -5px -5px 12px 0 #ffffff,
        //    inset 2px 2px 6px 0 #bebebe,
        //    inset -2px -2px 6px 0 #ffffff
      }
    }
  }
