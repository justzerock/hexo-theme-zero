.post__paginator {
  position: relative
  width: 100%
  margin: 6vw auto 0
  display: flex
  padding: 0.5em 0
  &::before {
    content: ''
    position: absolute
    top: -3vw
    left: 35%
    width: 30%
    height: 1px
    background: rgba($post-tt-color, 0.1)
  }
}
.post__prev {
  width: 50%
  display: inline-flex
  justify-content: flex-start
  &--link {
    //color: rgba(#6E99BB, 0.6)
    // box-shadow: boxShadow(0.2vw, 'light-out')
    //text-shadow: textShadow('light', 0.05vw, #E5EFF7, rgba(0,0,0,0.5))
    border-radius: 1vw 0.25vw 0.25vw 1vw
    height: 2vw
    padding: 0 1.5vw 0 0
    display: inline-flex
    align-items: center
    max-width: 90%
    position: relative
    margin-left: 1em
  }
  &--icon {
    font-size: 2vw
  }
  &--text {
    display: inline-block  
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap
    position: relative
    margin-left: 1em

  }
  &--block {
    display: inline-flex
    position: absolute
    right: 0.5vw
    top: 0.5vw
    width: 0.5vw
    height: 1vw
    border-radius: 0.25vw
    margin-left: 0.5vw
    // box-shadow: boxShadow(0.1vw, 'light-inset')  
  }
}
.post__next {
  width: 50%
  display: inline-flex
  justify-content: flex-end
  &--link {
    //color: rgba(#6E99BB, 0.6)
    // box-shadow: boxShadow(0.2vw, 'light-out')
    //text-shadow: textShadow('light', 0.05vw, #E5EFF7, rgba(0,0,0,0.5))
    border-radius: 0.25vw 1vw 1vw 0.25vw
    height: 2vw
    padding: 0 0 0 1.5vw
    display: inline-flex
    align-items: center
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap
    max-width: 90%
    position: relative
    margin-right: 1em
  }
  &--icon {
    font-size: 2vw
  }
  &--text {
    display: inline-block  
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap
    margin-right: 1em

  }
  &--block {
    display: inline-flex
    position: absolute
    left: 0.5vw
    top: 0.5vw
    width: 0.5vw
    height: 1vw
    border-radius: 0.25vw
    margin-right: 0.5vw
    // box-shadow: boxShadow(0.1vw, 'light-inset')  
  }
}