.post {
  border-radius:1vw 
  // box-shadow: boxShadow(0.2vw, 'light-out')
  width: 100%
  margin: 3vw auto 0
  background: $post-bg-color
  box-shadow: 0 0 8px rgba(#000, 0.02)
  //// box-shadow: 5px 5px 22px 0 #bebebe,
  //  -5px -5px 12px 0 #ffffff
  &__article {
    padding: 2vw
    &--title {
      color: $post-tt-color
    }
    kbd {
      display: inline-flex
      padding: 0 0.5em
      border-radius: 0.25em
      margin: 0 0.25em
      box-shadow: 0 0 5px rgba(#000, 0.1)
      //background: linear-gradient(145deg, #bdcbd4, #e1f2fd)
      // box-shadow: boxShadow(0.2vw, 'light-out')
    }
    .fancybox {
      &__link {
        display: flex
        justify-content: center
        align-items: center
        flex-direction: column  
      }
    }
    img {
      max-width: 100%
      object-fit: contain
      border: 0.2vw solid #fff
      box-shadow: 0 0 4px rgba(#000, 0.04)
      border-radius: 10px
      // box-shadow: boxShadow(0.2vw, 'light-out')    
    }
  }
  .line-numbers .line-numbers-rows {
    border-right: none
    // box-shadow: -0.05vw 0 0 #f3f7fb, 0.05vw 0 0 #c1d7e8
  }
  pre[class*=language-] {
    border-radius: 0.5vw
    // box-shadow: boxShadow(0.1vw, 'light-inset'), boxShadow(0.05vw, 'light-out')
    background: #EDF3F9
    margin: 2vw auto
    &::-webkit-scrollbar {
      background-color: #EDF3F9
      -webkit-// box-shadow: inset -0.1vw 0 0.2vw #f3f7fb, inset 0.1vw 0 0.3vw #c1d7e8
      border-radius: 0 0 0.5vw 0.5vw
      padding: 0 1vw
    }
    &::-webkit-scrollbar-thumb {
      background: linear-gradient(180deg, #E8F0F7, darken(#D2E3ED, 10%));
      border-radius: 0.5vw
    }
    code[class*="language-"] {
      font-family: 'Fira Code'
      background: none
    }
  }
  .highlight {
    overflow: auto  
    margin: 3vw 0
    padding: 0 1em
    border-radius: 0.5vw
    background: #2D343F
    //box-shadow: 0 0 20px rgba(#000, 0.4)
    position: relative
    // box-shadow: boxShadow(0.1vw, 'light-inset'), boxShadow(0.05vw, 'light-out')
    &::-webkit-scrollbar {
      background-color: #2D343F
      //-webkit-box-shadow: inset -0.1vw 0 0.2vw #f3f7fb, inset 0.1vw 0 0.3vw #c1d7e8
      border-radius: 0 0 0.5vw 0.5vw
    }
    &::-webkit-scrollbar-thumb {
      background: rgba(#fff, 0.2)
      border-radius: 0.5vw
    }
    table {
      .gutter {
        text-align: right
        font-family: 'fira code'
        color: rgba(#fff, 0.6)
        pre {
          margin: 1.5em 0 1em
        }
      }
      .code {
        pre {
          &.code-badge-pre {
            position: inherit
            margin: 1.5em 0 1em
            .code-badge {
              background: rgba(#fff, 0.1)  
              color: #31A7F2
              .code-badge-language {
                color: #b48ead  
                user-select: none
              }
            }
          }
          code.hljs {
            font-family: 'fira code'
            background: none
          }
        }  
      }
    }
  }
}