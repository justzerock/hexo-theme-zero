.post {
  border-radius:1vw
  width: calc(100% - 6vw)
  line-height: 1.65em
  margin: 3vw auto 0
  padding: 2vw 3vw
  background: var(--block-bg-color)
  box-shadow: 0 0 10px rgba(#000, 0.08)
  &__top-img {
    width: 100%
    height: 15vw
    object-fit: cover
    border-radius: 1vw
    position: absolute
    left: 0 
    top: 0
  }
  &__article {
    padding: 0 1vw 1vw
    position: relative
    margin: 0 0 4vw
    &--top {
      padding-top: 15vw
    } 
    &--title {
      color: var(--post-tt-color)
      line-height: 1.5em
      text-align: center
    }
    &--date {
      text-align: center
      }
    &--content {
      hr {
        border-color: transparent
        position: relative
        &::before {
          content: ''
          position: absolute
          width: 100%
          height 1px
          left: 0
          background: #dedede
          }
      }
      }
    &--gallery {
      display: flex
      flex-wrap: wrap
      }
    &--img {
      display: inline-flex
      flex: 1
      object-fit: cover
      height: 20vw
      width: 28vw
      }
  }
  &__gallery {
    &--block {
      display: flex
      flex-wrap: wrap
      }
    &--link {
      display: inline-flex
      flex: 1
      }
    &--img {
      object-fit: cover
      width: 27vw
      height: 20vw
      }
    }
  &__img {
    &--block {
      display: flex
      justify-content: center
      }
    &--img {
      max-width: 100%
      object-fit: cover
      border-radius: 0.5vw
      }
    &--title {
      display: flex
      justify-content: center
      margin-top: 0
      }
    }
  /* 代码高亮 */
  .code-badge-pre {
    overflow: auto  
    margin: 3vw 0
    padding: 0
    border-radius: 0.5vw
    position: relative
    box-shadow: 0 0 0.25vw rgba(#000,0.2)
    &:hover {
      .code-badge {
        div:nth-child(2) {
          opacity 1
        }
      }
    }
    .code-badge {
      flex-direction: row-reverse
      background: rgba(#000,0)
      color: var(--code-badge)
      padding: 0 5px
      .code-badge-language {
        color: var(--code-badge)
        margin: 0
        user-select: none
      }
      div:nth-child(2) {
        opacity 0
        transition: all .25s ease-in-out
      }
    }
    .hljs {
      padding: 1em
      font-family: 'Menlo'
      background: var(--code-bg-color)
      &::selection, ::selection {
        background-color: $selection-bg
        color: $selection-color
      }
      &::-webkit-scrollbar {
        width 0.6vw
        height: 0.6vw
      }
      &::-webkit-scrollbar-thumb {
        background: $code-scrollbar
        border-radius: 0.25vw
      }
    }
  }

  /*  按键 */
  kbd {
    display: inline-flex
    padding: 0 0.5em
    border-radius: 0.25em
    margin: 0 0.25em
    background: $kbd-bg
    color: $kbd-color
    box-shadow: 2px 2px 5px rgba(#000, 0.2)
  }

  /*  外链视频 */
  .video-container {
    display: flex
    justify-content: center
    iframe {
      width: 54vw
      height: 30.375vw
      border-radius: 0.5vw
      box-shadow: 0 0 10px rgba(#000, 0.2)
      }
  }

  /* 表格 */
  table {
    border-spacing: 0
    border-collapse: collapse
    * {
      box-sizing: border-box
    }
    th,td {
      border: 1px solid #2c344152
      padding: 0.5em
    }
    }
  /* 引用 */
  blockquote {
    background: var(--quote-bg)
    border-radius: 1vw;
    margin: 1em 0;
    padding: 1em 2em 1em 3em;
    position relative
    &::before {
      content: '“'
      position: absolute
      left: 0
      top: 2vw
      font-size: 5em
      color: $quote-icon-color
      }
    &.pullquote.right {
      text-align: right
      padding: 1em 3em 1em 2em;
      &::before {
        content: '”'
        right: 0
        }
      }
    footer {
      overflow hidden
      text-overflow: ellipsis
    }
    cite {
      margin-left: 1em
      font-style: normal
      position: relative
      &::before {
        content: ''
        position: absolute
        width: 95%
        height: 0.5em
        border-radius: 0.25em
        left: -0.25em
        bottom: -0.25em
        background: $cite-bg
      }
    }
  }
}

@media (max-width: $xs) {
  .post {
    margin: 0 auto 0
    padding: 10vw 3vw
    &__top-img {
      height: 50vw
      top: 12vw
    }
    &__article {
      padding-top: 10vw
      &--top {
        padding-top: 60vw
      }
    }
    box-shadow: none
    blockquote {
      &::before {
        top: 5vw
      }
    }
      /*  外链视频 */
    .video-container {
      iframe {
        width: 90vw
        height: 50.6vw
        border-radius: 1vw
        }
    }
  }
}