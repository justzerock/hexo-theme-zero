.post {
  border-radius:1vw 1vw 0.5vw 0.5vw
  width: calc(100% - 6vw)
  line-height: 1.65em
  margin: 3vw auto 0
  padding: 3vw
  background: $post-bg-color
  box-shadow: 0 0 10px rgba(#000, 0.08)
  &__top-img {
    width: 100%
    height: 15vw
    object-fit: cover
    border-radius: 1vw 1vw 0 0 
    position: absolute
    left: 0 
    top: 0
  }
  &__article {
    padding: 0 1vw 1vw
    position: relative
    &--top {
      padding-top: 15vw
    } 
    &--title {
      color: $post-tt-color
    }
    &--gallery {
      display: flex
      flex-wrap: wrap
      }
    &--img {
      display: inline-flex
      flex: 1
      object-fit: cover
      height: 20vw
      width: 28vw
      }
    .video-container {
      display: flex
      justify-content: center
      iframe {
        width: 48vw
        height: 27vw
        }
      }
    kbd {
      display: inline-flex
      padding: 0 0.5em
      border-radius: 0.25em
      margin: 0 0.25em
      box-shadow: 2px 2px 5px rgba(#000, 0.2)
    }
  }
  &__gallery {
    &--block {
      display: flex
      flex-wrap: wrap
      }
    &--link {
      display: inline-flex
      flex: 1
      }
    &--img {
      object-fit: cover
      width: 27vw
      height: 20vw
      }
    }
  &__img {
    &--block {
      display: flex
      justify-content: center
      }
    &--img {
      max-width: 100%
      object-fit: cover
      border-radius: 0.5vw
      }
    &--title {
      display: flex
      justify-content: center
      margin-top: 0
      }
    }
  .line-numbers .line-numbers-rows {
    border-right: none
    // box-shadow: -0.05vw 0 0 #f3f7fb, 0.05vw 0 0 #c1d7e8
  }
  pre[class*=language-] {
    border-radius: 0.5vw
    // box-shadow: boxShadow(0.1vw, 'light-inset'), boxShadow(0.05vw, 'light-out')
    background: #EDF3F9
    margin: 2vw auto
    &::-webkit-scrollbar {
      background-color: #EDF3F9
      -webkit-// box-shadow: inset -0.1vw 0 0.2vw #f3f7fb, inset 0.1vw 0 0.3vw #c1d7e8
      border-radius: 0 0 0.5vw 0.5vw
      padding: 0 1vw
    }
    &::-webkit-scrollbar-thumb {
      background: linear-gradient(180deg, #E8F0F7, darken(#D2E3ED, 10%));
      border-radius: 0.5vw
    }
    code[class*="language-"] {
      font-family: 'Fira Code'
      background: none
    }
  }
  .highlight {
    overflow: auto  
    margin: 3vw 0
    padding: 0 1em
    border-radius: 0.5vw
    background: #2D343F
    //box-shadow: 0 0 20px rgba(#000, 0.4)
    position: relative
    // box-shadow: boxShadow(0.1vw, 'light-inset'), boxShadow(0.05vw, 'light-out')
    &::-webkit-scrollbar {
      background-color: #2D343F
      //-webkit-box-shadow: inset -0.1vw 0 0.2vw #f3f7fb, inset 0.1vw 0 0.3vw #c1d7e8
      border-radius: 0 0 0.5vw 0.5vw
    }
    &::-webkit-scrollbar-thumb {
      background: rgba(#fff, 0.2)
      border-radius: 0.5vw
    }
    table {
      .gutter {
        text-align: right
        font-family: 'fira code'
        color: rgba(#fff, 0.6)
        pre {
          //margin: 1.5em 0 1em
        }
      }
      .code {
        pre {
          &.code-badge-pre {
            position: inherit
            margin: 1.5em 0 1em
            .code-badge {
              background: rgba(#fff, 0.1)  
              color: #31A7F2
              .code-badge-language {
                color: #b48ead  
                user-select: none
              }
            }
          }
          code.hljs {
            font-family: 'fira code'
            background: none
          }
        }  
      }
    }
  }
}