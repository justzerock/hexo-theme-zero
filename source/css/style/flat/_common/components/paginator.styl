  .paginator {
    line-height: 2em
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin: var(--paginator-margin) auto
    .page-number, .space {
      user-select: none
      margin-right: 1em
      margin-bottom: 0.5em
      color: var(--page-number-color)
      background: var(--page-number-bg-color)
      box-shadow: 0 0 4px rgba(#000, 0.1)
      display: inline-flex
      justify-content: center
      width: 2em
      height: 2em
      box-sizing: border-box
      border-radius: 1em
      transition: all .3s ease-in-out
      &:active {
        box-shadow: 0 0 0 rgba(#000, 0.1)
      }
      &.current {
        cursor: default
        background: var(--page-number-bg-color-current)
        box-shadow: 0 0 0 rgba(#000, 0.1)
        color: var(--page-number-color-current)
      }
    }
    .space {
      background: none
      border: none
      box-shadow: none
      }
    .extend {
      user-select: none
      height: 2em
      padding: 0 1em
      border-radius: 0.5em
      display: inline-flex
      background: var(--page-number-bg-color)
      box-shadow: 0 0 4px rgba(#000, 0.1)
      color: var(--page-number-color)
      transition: all .3s ease-in-out
      &:active {
        box-shadow: 0 0 0 rgba(#000, 0.1)
      }
      &.prev {
        margin-right: 1em
      }
    }
  }