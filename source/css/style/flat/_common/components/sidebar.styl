.sidebar {
  position: fixed
  right: 0
  top: 0
  width: calc(16.6667vw - 2em)
  height: calc(100vh - 2em)
  border-radius: 1vw 0 0 1vw
  display: flex
  flex-direction: column
  background: rgba(#fff, 0.1)
  // box-shadow: -2px 0 6px rgba(#000, 0.06), inset 1px 0 2px rgba(#fff, 0.6)
  padding: 1em
  ol {
    list-style none
  }
  a[class*=sidebar__tag-] {
    display: inline-flex
  }
}