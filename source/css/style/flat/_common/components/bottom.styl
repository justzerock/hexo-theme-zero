.menu {
  &__bottom {
    display: flex
    flex-direction: column
    position: absolute
    align-items: flex-start
    bottom: 1em
    left: 1em
    font-size: 0.75vw
    &--icp, &--theme {
      display: inline-flex
      width: 1em
      justify-content: center
    }
    &--link {
      color: #6285a5
      &:hover {
        color: $color-blue
      } 
    }
  }
}
