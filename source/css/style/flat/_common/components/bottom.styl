.bottom {
    display: flex
    flex-direction: column
    align-items: flex-start
    line-height: 1.5em
    font-size: 1vw
    margin: 2vw auto 1em
    &--icp, &--theme {
      display: inline-flex
      width: 1em
      justify-content: center
    }
    &--link {
      color: #6285a5
      &:hover {
        color: $color-blue
      } 
    }
  }

@media (max-width: $xs) {
  .bottom {
    margin: 5vw auto 30vw
    line-height: 6vw
    font-size: 3vw
    }
  }