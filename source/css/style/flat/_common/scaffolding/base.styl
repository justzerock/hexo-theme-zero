body {
  display: flex;
  min-height: 100vh
  flex-direction: column;
  justify-content: center
  align-items: center
  color: rgba($color-dark, 0.8);
  background: $page-bg-color;
  background-attachment: fixed;
  overflow-y: overlay
  padding: 17px
  a {
    color: lighten($color-blue, 5%)
  }
  &::-webkit-scrollbar {
    background-color: #F4F4F4
    //-webkit-box-shadow: inset -0.1vw 0 0.2vw #f3f7fb, inset 0.1vw 0 0.3vw #c1d7e8
    //border-radius: 0.5vw
  }
  &::-webkit-scrollbar-thumb {
    background: #55BBF1
    border-radius: 0.5vw
  }
}


.content-main {
  display: flex
  flex-direction: column
  justify-content: flex-start
  align-items: center
  flex: 1
}

@keyframes iconAnimate {
  0%, 100% {
    transform: scale(1);
  }
  10%, 30% {
    transform: scale(0.9);
  }
  20%, 40%, 60%, 80% {
    transform: scale(1.1);
  }
  50%, 70% {
    transform: scale(1.1);
  }
}

::selection {
  color: rgba(#fff, 0.8);
  text-shadow: none
  background-color: rgba($color-red, .8);
  border-radius: 10px
}

@media (max-width: $xs-width) {
  .content-main {
    width: 62.3333vw
  }
  .paginator {
    margin: 5vw auto
  }
}
@media (max-width: $sm-width) and (min-width: $xs-width) {
  .content-main {
    width: 62.3333vw
  }
  .paginator {
    margin: 5vw auto
  }
}
@media (max-width: $md-width) and (min-width: $sm-width)  {
  .content-main {
    width: 75vw
  }
  .paginator {
    margin: 4vw auto
  }
}
@media (min-width: $md-width) {
  .content-main {
    width: 60vw
  }
  .paginator {
    margin: 3vw auto
  }
}
