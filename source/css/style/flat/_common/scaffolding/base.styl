body {
  display: flex;
  min-height: 100vh
  flex-direction: column;
  justify-content: center
  align-items: center
  color: $font-color
  background: $page-bg-color;
  background-attachment: fixed;
  overflow-y: overlay
  a {
    color: $link-color
    text-decoration: none
    &:hover {
      color: $link-color-hover
      }
  }
  &::-webkit-scrollbar {
    background-color: #F4F4F4
    width: 8px
    height: 6px
    //-webkit-box-shadow: inset -0.1vw 0 0.2vw #f3f7fb, inset 0.1vw 0 0.3vw #c1d7e8
    //border-radius: 0.5vw
  }
  &::-webkit-scrollbar-thumb {
    background: #CBCBCB
    border-radius: 4px
  }
}

.content-main {
  display: flex
  flex-direction: column
  justify-content: flex-start
  align-items: center
  flex: 1
}

::selection {
  color: rgba(#fff, 0.8);
  text-shadow: none
  background-color: rgba($color-red, .8);
  border-radius: 10px
}

@media (max-width: $xs-width) {
  .content-main {
    width: 100vw
  }
  .paginator {
    margin: 5vw auto
  }
}
@media (max-width: $sm-width) and (min-width: $xs-width) {
  .content-main {
    width: 80vw
  }
  .paginator {
    margin: 5vw auto
  }
}
@media (max-width: $md-width) and (min-width: $sm-width)  {
  .content-main {
    width: 71vw
  }
  .paginator {
    margin: 4vw auto
  }
}
@media (min-width: $md-width) {

  .content-main {
    width: 62vw
  }
  .paginator {
    margin: 3vw auto
  }
}
