.menu {
  &__avatar {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    margin: 2em auto;
    &--img {
      width: 8vw
      height: 8vw
      border-radius: 50%
      border: 2px solid rgba(#fff, 0.6)
      box-shadow: boxShadow(0.1vw, 'light-out')
    }
    &--title {
      font-family: $title-font
      color: $color-blue-gray
      font-size: 2vw
    }
  }  
}