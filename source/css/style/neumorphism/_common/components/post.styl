.post {
  border-radius:1vw 
  box-shadow: boxShadow(0.2vw, 'light-out')
  width: 100%
  margin: 3vw auto 0
  //box-shadow: 5px 5px 22px 0 #bebebe,
  //  -5px -5px 12px 0 #ffffff
  &__article {
    padding: 2vw
    &--title {
      color: $color-blue  
    }
    kbd {
      display: inline-flex
      padding: 0 0.5em
      border-radius: 0.25em
      margin: 0 0.25em
      background: linear-gradient(145deg, #bdcbd4, #e1f2fd)
      box-shadow: boxShadow(0.2vw, 'light-out')
    }
    img {
      max-width: 100%
      object-fit: contain
      border: 0.2vw solid #EDF3F9
      box-shadow: boxShadow(0.2vw, 'light-out')    
    }
  }
  .line-numbers .line-numbers-rows {
    border-right: none
    box-shadow: -0.05vw 0 0 #f3f7fb, 0.05vw 0 0 #c1d7e8
  }
  pre[class*=language-] {
    border-radius: 0.5vw
    box-shadow: boxShadow(0.1vw, 'light-inset'), boxShadow(0.05vw, 'light-out')
    background: #EDF3F9
    margin: 2vw auto
    &::-webkit-scrollbar {
      background-color: #EDF3F9
      -webkit-box-shadow: inset -0.1vw 0 0.2vw #f3f7fb, inset 0.1vw 0 0.3vw #c1d7e8
      border-radius: 0 0 0.5vw 0.5vw
      padding: 0 1vw
    }
    &::-webkit-scrollbar-thumb {
      background: linear-gradient(180deg, #E8F0F7, darken(#D2E3ED, 10%));
      border-radius: 0.5vw
    }
    code[class*="language-"] {
      font-family: 'Fira Code'
      background: none
    }
  }
  .highlight {
    overflow: auto  
    margin: 3vw 0
    padding: 0 1em
    border-radius: 0.5vw
    background: rgba(#fff, 0.8)
    box-shadow: boxShadow(0.1vw, 'light-inset'), boxShadow(0.05vw, 'light-out')
    &::-webkit-scrollbar {
      background-color: rgba(#fff, 0.8)
      -webkit-box-shadow: inset -0.1vw 0 0.2vw #f3f7fb, inset 0.1vw 0 0.3vw #c1d7e8
      border-radius: 0 0 0.5vw 0.5vw
    }
    &::-webkit-scrollbar-thumb {
      background: linear-gradient(180deg, #E8F0F7, darken(#D2E3ED, 10%));
      border-radius: 0.5vw
    }
    table {
      .gutter {
        text-align: right
        font-family: 'fira code'
      }
      .code {
        pre {
          code.hljs {
            font-family: 'fira code'
            background: none
          }
        }  
      }
    }
  }
}