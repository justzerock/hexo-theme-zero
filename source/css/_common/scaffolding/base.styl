body {
  display: flex;
  min-height: 100vh
  flex-direction: column;
  line-height: 2;
  justify-content: center
  align-items: center
  color: #282C34;
}

#content-outer {
  display: flex
  flex: 1  
  width: 40vw
}

.recent-post-item {
  display: flex
  flex-direction: column
  padding: 1vw 2vw
  margin: 0 0 2vw
  border-radius: 0.5vw
  border-bottom: 1px dashed rgba(#000, 0.08)
  box-sizing: border-box
  transition: all 0.3s ease-in-out
  &:hover {
    box-shadow: 0 1px 2px 1px rgba(#000, 0.08)
    //background: rgba(#000, 0.02)  

    .post-title a::before {
      transform: scaleX(1)  
    }
    .post-link a {
      background: lighten(#1B9984, 20%)
      color: #fff
      box-shadow: 0 1px 2px 1px rgba(#000, 0.08)
    }
  }
  .post-title {
    display flex
    justify-content: center
    align-items: center
    margin: 0
    line-height: 1.75
    a {
      &::before {
        content: ''
        position: absolute
        right 0
        bottom: 0.3em
        width: 100%
        height 0.3em
        background: #FFCE43;
        border-radius: 0.5vw
        z-index: -1
        transform: scaleX(0)
        transition: transform 0.3s ease-in-out;
      }
    }
  }
  .post-date {
    display: flex
    justify-content: start
    .date-create {
      color: rgba(#000, 0.4);
    }
    .date-update {
      color: #f29da4;
    }  
    .dot {
      display: inline-flex
      justify-content: center
      align-items: center
      position: relative
      width: 2em
      &::before {
        content: ''
        display: flex
        position: absolute
        width: 0.5em
        height 0.5em
        border-radius: 50%
        background: #42A5F5;
      }
    }
  }  

  .post-top-img {
    display: flex
    justify-content: center
    img {
      display: flex

      max-width 100%
    }
  }

  .post-excerpt {

  }

  .post-link {
    display: flex  
    justify-content: center
    align-items: center
    margin: 2vw 0 1vw
    a {
      display: flex
      justify-content: center
      align-items: center
      position: relative
      border-radius: 1em
      width: 6em
      height: 2em
      transition: all 0.3s ease-in-out
      &:active {
        box-shadow: 0 0 0 0 rgba(#000, 0.0)
        background: lighten(#1B9984, 30%)
      }
    }
  }
}

#bottom-inner {
  margin-top: 5vw
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center  
}

a {
  color: #1B9984;
  text-decoration: none;
  position relative
}


.icon-love {
  color: red
  display: inline-block;
  margin: 0 5px;
  animation: iconAnimate 1.33s ease-in-out infinite;
}

@keyframes iconAnimate {
  0%, 100% {
    transform: scale(1);
  }
  10%, 30% {
    transform: scale(0.9);
  }
  20%, 40%, 60%, 80% {
    transform: scale(1.1);
  }
  50%, 70% {
    transform: scale(1.1);
  }
}

::selection {
  color: #fff;
  background-color: #FF5D5A;
}